---
import MainLayout from '../layouts/MainLayout.astro';
import VideoCarousel from '../components/VideoCarousel.astro';
import PageHeader from '../components/PageHeader.astro';
import MainHeading from '../components/MainHeading.astro';
---

<MainLayout title="Forside - Candello Media">
  <!-- Fullscreen hero with video background -->
  <div class="relative h-screen w-full overflow-hidden">
    <!-- Video carousel background -->
    <VideoCarousel />
    
    <MainHeading absolute={true} headingSize="text-5xl sm:text-6xl md:text-7xl lg:text-7xl">
      Innovativt <br> digitalt <br> mediebureau
    </MainHeading>

    <PageHeader comment="Logo header at top - positioned below progress bars on mobile" />
  </div>
</MainLayout>

<style>
  html, body {
    height: 100%;
    overflow: hidden;
  }
  
  /* Prevent scrolling on home page */
  body:has(main > div.h-screen) {
    overflow: hidden;
  }
</style>
