---
import MainLayout from '../layouts/MainLayout.astro';
import ServiceList from '../components/ServiceList.astro';
import PageHeader from '../components/PageHeader.astro';
import MainHeading from '../components/MainHeading.astro';
---

<MainLayout title="Services - Candello Media" description="Se vores services inden for indhold, digital og marketing">
  <div class="bg-neutral-dark min-h-screen pb-20">
    <PageHeader comment="Logo header at top" />

    <MainHeading>
      Services
    </MainHeading>

    <!-- Divider line -->
    <div class="w-full px-4 pt-8">
      <div class="container-content border-t border-neutral-light/30"></div>
    </div>
    <!-- Project List -->
    <div class="w-full px-4">
      <div class="container-content">
        <ServiceList />
      </div>
    </div>

  </div>
</MainLayout>
