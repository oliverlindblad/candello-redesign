---
import MainLayout from '../layouts/MainLayout.astro';
import ProjectList from '../components/ProjectList.astro';
import Testimonial from '../components/Testimonial.astro';
import PageHeader from '../components/PageHeader.astro';
import MainHeading from '../components/MainHeading.astro';
---

<MainLayout title="Projekter - Candello Media" description="Se vores tidligere projekter og cases">
  <div class="bg-neutral-dark min-h-screen">
    <PageHeader comment="Logo header at top" />

    <MainHeading>
      Projekter fra <br> tidligere kunder
    </MainHeading>

    <!-- Divider line -->
    <div class="w-full px-4 py-8">
      <div class="container-content border-t border-neutral-light/30"></div>
    </div>

    <!-- Project List -->
    <div class="w-full px-4">
      <div class="container-content">
        <ProjectList />
      </div>
    </div>

    <!-- Divider line -->
    <div class="w-full px-4 py-8">
      <div class="container-content border-t border-neutral-light/30"></div>
    </div>

    <!-- Testimonial Section -->
        <Testimonial />

    </div>
  
</MainLayout>

