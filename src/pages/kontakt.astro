---
import MainLayout from '../layouts/MainLayout.astro';
import SectionHeading from '../components/SectionHeading.astro';
import Button from '../components/Button.astro';
---

<MainLayout title="Kontakt - Candello Media" description="Kontakt os for at høre mere om vores services">
  <div class="container mx-auto px-4 py-12">
    <SectionHeading title="Kontakt os" />
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <h3 class="text-2xl font-bold mb-4">Kontaktinformation</h3>
        <p class="mb-2">Store Kannikestræde 6B</p>
        <p class="mb-2">Telefon: +45 22 15 64 33</p>
        <p class="mb-4">E-mail: info@candello.dk</p>
      </div>
      
      <form class="space-y-4">
        <div>
          <label for="name" class="block mb-2">Navn</label>
          <input type="text" id="name" name="name" class="w-full px-4 py-2 border rounded-lg" required />
        </div>
        <div>
          <label for="email" class="block mb-2">Email</label>
          <input type="email" id="email" name="email" class="w-full px-4 py-2 border rounded-lg" required />
        </div>
        <div>
          <label for="company" class="block mb-2">Virksomhed</label>
          <input type="text" id="company" name="company" class="w-full px-4 py-2 border rounded-lg" />
        </div>
        <div>
          <label for="message" class="block mb-2">Besked</label>
          <textarea id="message" name="message" rows="4" class="w-full px-4 py-2 border rounded-lg" required></textarea>
        </div>
        <Button type="submit">Send besked</Button>
      </form>
    </div>
  </div>
</MainLayout>

