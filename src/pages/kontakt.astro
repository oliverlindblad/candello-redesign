---
import MainLayout from '../layouts/MainLayout.astro';
import Button from '../components/Button.astro';
import PageHeader from '../components/PageHeader.astro';
import MainHeading from '../components/MainHeading.astro';
---

<MainLayout title="Kontakt - Candello Media" description="Kontakt os for at høre mere om vores services">
  <!-- Background with blur effect -->
  <div class="relative min-h-screen">
    <!-- Background image -->
    <div class="fixed inset-0 z-0">
      <img 
        src="/images/dusager-3.webp" 
        alt="Office background" 
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black/60 "></div>
      <div class="absolute inset-0 bg-gradient-to-t from-black/30 via-black/20 to-bg-black/10"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 min-h-screen flex flex-col">
      <PageHeader comment="Logo header at top" />

      <!-- Main content -->
      <div class="flex-1 pt-20 md:pt-28 pb-24 px-4 md:px-8 lg:px-16">
        <div class="container-content">
         
          <!-- Two column layout -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-16 lg:gap-12">
            <!-- Left column: Contact information -->
            <div class="flex flex-col space-y-4">
              <MainHeading headingSize="text-5xl md:text-6xl lg:text-8xl" simple={true}>
                Kontakt os
              </MainHeading>
              
              <div class="grid grid-cols-2 md:flex md:flex-col gap-4 md:gap-0 md:space-y-1">
                <!-- Contact info column -->
                <div class="flex flex-col space-y-1 text-md md:text-lg text-neutral-light md:text-neutral-grey font-body font-light">
                  <p>Store Kannikestræde 6B</p>
                  <a 
                    href="tel:+4522156433" 
                    class="text-neutral-light md:text-neutral-grey md:hover:text-neutral-light transition-colors"
                  >
                    +45 22 15 64 33
                  </a>
                  <a 
                    href="mailto:info@candello.dk" 
                    class="text-neutral-light md:text-neutral-grey md:hover:text-neutral-light transition-colors"
                  >
                    info@candello.dk
                  </a>
                </div>

                <!-- Social media icons column -->
                <div class="flex gap-4 md:pt-2 items-end md:items-start justify-end md:justify-start">
                  <!-- Facebook -->
                  <a 
                    href="https://www.facebook.com/Candello/" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="w-6 h-6 text-neutral-light md:text-neutral-grey md:hover:text-neutral-light transition-colors"
                    aria-label="Facebook"
                  >
                    <svg fill="currentColor" viewBox="0 0 24 24">
                      <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                    </svg>
                  </a>

                  <!-- Instagram -->
                  <a 
                    href="https://www.instagram.com/candellomedia/" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="w-6 h-6 text-neutral-light md:text-neutral-grey md:hover:text-neutral-light transition-colors"
                    aria-label="Instagram"
                  >
                    <svg fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                    </svg>
                  </a>

                  <!-- LinkedIn -->
                  <a 
                    href="https://www.linkedin.com/company/candello-media/?originalSubdomain=dk" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="w-6 h-6 text-neutral-light md:text-neutral-grey md:hover:text-neutral-light transition-colors"
                    aria-label="LinkedIn"
                  >
                    <svg fill="currentColor" viewBox="0 0 24 24">
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                  </a>
                </div>
              </div>
            </div>

            <!-- Right column: Contact form -->
            <div class="flex items-start pb-6 md:pb-0">
              <form class="w-full backdrop-blur-md bg-neutral-dark/10 border border-white/10 rounded-md p-6 md:p-8 space-y-6">
                <!-- Virksomhed -->
                <div class="relative">
                  <input 
                    type="text" 
                    id="company" 
                    name="company" 
                    placeholder="Virksomhed"
                    class="w-full bg-transparent border-0 border-b border-neutral-light/30 text-neutral-light placeholder:text-neutral-light/60 focus:outline-none focus:border-neutral-light pb-2 text-base md:text-lg font-body font-light transition-colors"
                  />
                </div>

                <!-- Navn -->
                <div class="relative">
                  <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    placeholder="Navn"
                    class="w-full bg-transparent border-0 border-b border-neutral-light/30 text-neutral-light placeholder:text-neutral-light/60 focus:outline-none focus:border-neutral-light pb-2 text-base md:text-lg font-body font-light transition-colors"
                    required 
                  />
                </div>

                <!-- Email -->
                <div class="relative">
                  <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    placeholder="Email"
                    class="w-full bg-transparent border-0 border-b border-neutral-light/30 text-neutral-light placeholder:text-neutral-light/60 focus:outline-none focus:border-neutral-light pb-2 text-base md:text-lg font-body font-light transition-colors"
                    required 
                  />
                </div>

                <!-- Besked -->
                <div class="relative">
                  <textarea 
                    id="message" 
                    name="message" 
                    rows="4"
                    placeholder="Skriv her...."
                    class="w-full bg-transparent border-0 border-b border-neutral-light/30 text-neutral-light placeholder:text-neutral-light/60 focus:outline-none focus:border-neutral-light pb-2 text-base md:text-lg font-body font-light resize-none transition-colors"
                    required
                  ></textarea>
                </div>

                <!-- Submit button -->
                <div class="pt-4">
                  <Button type="submit" variant="primary" class="w-full md:w-auto">
                    Send besked
                  </Button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</MainLayout>

