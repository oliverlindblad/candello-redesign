<!-- Closed state: Oval navigation bar (positioned at bottom center, above overlay) -->
<div class={`fixed left-1/2 -translate-x-1/2 z-[1000] ${
  currentPath === '/' ? 'bottom-4 md:bottom-32' : 'bottom-8 md:bottom-62'
}`}>
  <nav>
    <div 
      id="nav-bar"
      class="inline-flex items-center rounded-full px-4 py-2  backdrop-blur-lg bg-neutral-light/5 border border-white/10 shadow-lg gap-2"
    >
      <!-- Navigation links -->
      <a 
        href="/projekter" 
        class={`nav-link font-light font-body px-3 py-1 rounded-full transition md:hover:bg-brand-green/60 ${isActive('/projekter') ? 'text-neutral-light bg-brand-green/60' : 'text-neutral-light'}`}
      >
        Projekter
      </a>
      <a 
        href="/services" 
        class={`nav-link font-light font-body px-3 py-1 rounded-full transition md:hover:bg-brand-green/60 ${isActive('/services') ? 'text-neutral-light bg-brand-green/60' : 'text-neutral-light'}`}
      >
        Services
      </a>
      <a 
        href="/kontakt" 
        class={`nav-link font-light font-body px-3 py-1 rounded-full transition md:hover:bg-brand-green/60 ${isActive('/kontakt') ? 'text-neutral-light bg-brand-green/60' : 'text-neutral-light'}`}
      >
        Kontakt
      </a>
      
      <!-- Burger icon -->
      <button
        id="burger-button"
        class="burger-icon w-12 h-12 flex items-center justify-center rounded-full text-neutral-light transition-opacity px-3 py-1 transition md:hover:bg-brand-green/60"
        aria-label="Menu"
        aria-expanded="false"
      >
        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path id="burger-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M1 6h22M1 12h22M1 18h22"></path>
          <path id="close-icon" class="hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
  </div>
</nav>
</div>

<script>
  // Simple boolean state to control menu open/close
  let isOpen = false;
  
  const burgerButton = document.getElementById('burger-button');
  const menuOverlay = document.getElementById('menu-overlay');
  const burgerIcon = document.getElementById('burger-icon');
  const closeIcon = document.getElementById('close-icon');
  const navLinks = document.querySelectorAll('.nav-link');
  const menuLinks = document.querySelectorAll('.menu-link');
  
  // Function to update hover states based on isOpen
  // Hover effect is now always active (defined in HTML classes)
  function updateHoverStates() {
    // Hover effect is always enabled via HTML classes, no need to toggle
  }
  
  // Function to toggle menu
  function toggleMenu() {
    if (!burgerButton || !menuOverlay || !burgerIcon || !closeIcon) return;
    
      isOpen = !isOpen;
      
      if (isOpen) {
      // Open overlay with fade-in transition
        menuOverlay.classList.remove('hidden');
        setTimeout(() => {
        if (menuOverlay) {
          menuOverlay.classList.remove('opacity-0');
          menuOverlay.classList.add('opacity-100');
        }
        }, 10);
      // Switch to close icon
        burgerIcon.classList.add('hidden');
        closeIcon.classList.remove('hidden');
      // Keep background visible when menu is open
      burgerButton.classList.add('bg-brand-green/60');
        burgerButton.setAttribute('aria-expanded', 'true');
      } else {
      // Close overlay with fade-out transition
        menuOverlay.classList.remove('opacity-100');
        menuOverlay.classList.add('opacity-0');
        setTimeout(() => {
        if (menuOverlay) {
          menuOverlay.classList.add('hidden');
        }
        }, 300);
      // Switch back to burger icon
        burgerIcon.classList.remove('hidden');
        closeIcon.classList.add('hidden');
      // Remove background when menu is closed
      burgerButton.classList.remove('bg-brand-green/60');
        burgerButton.setAttribute('aria-expanded', 'false');
      }
    
    // Update hover states when menu state changes
    updateHoverStates();
  }
  
  if (burgerButton && menuOverlay && burgerIcon && closeIcon) {
    // Initialize hover states (menu starts closed)
    updateHoverStates();
    
    // Toggle menu on burger button click
    burgerButton.addEventListener('click', toggleMenu);
    
    // Close menu when clicking on any menu link
    menuLinks.forEach(link => {
      link.addEventListener('click', () => {
        if (isOpen) {
          toggleMenu();
      }
      });
    });

    // Close menu on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && isOpen) {
        toggleMenu();
      }
    });
  }
</script>
