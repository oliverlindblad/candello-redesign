---
interface Props {
  title: string;
  description?: string;
  image?: string;
  slug?: string;
  category?: string;
}

const { title, description, image, slug, category } = Astro.props;
---

<a href={slug ? `/projekter/${slug}` : '#'} class="project-card block group">
  {image && (
    <div class="w-full aspect-[4/3] overflow-hidden mb-4 relative rounded-sm">
      <img src={image} alt={title} class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300" />
      <div class="absolute inset-0 bg-black/50"></div>
    </div>
  )}
  <div class="space-y-3">
    <div class="flex justify-between items-center">
      <h3 class="text-2xl md:text-3xl font-light text-neutral-light">{title}</h3>
      {category && (
        <p class="text-sm md:text-base text-neutral-grey font-light ">{category}</p>
      )}
    </div>
    {description && (
      <p class="text-sm md:text-lg text-neutral-grey leading-relaxed max-w-full md:max-w-xl">{description}</p>
    )}
  </div>
</a>

