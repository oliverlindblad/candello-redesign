---
interface Props {
  title: string;
  description?: string;
  image?: string;
  slug?: string;
}

const { title, description, image, slug } = Astro.props;
---

<article class="project-card bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow">
  {image && (
    <img src={image} alt={title} class="w-full h-48 object-cover" />
  )}
  <div class="p-6">
    <h3 class="text-xl font-bold mb-2">{title}</h3>
    {description && <p class="text-gray-600">{description}</p>}
    {slug && (
      <a href={`/projekter/${slug}`} class="mt-4 inline-block text-blue-600 hover:underline">
        Læs mere →
      </a>
    )}
  </div>
</article>

