---
const { href, variant = 'primary', type = 'button', class: className = '' } = Astro.props;

const baseClasses = 'px-6 py-3 rounded-full transition-colors text-lg md:text-md text-center';
const variantClasses: Record<string, string> = {
  primary: 'bg-brand-green text-neutral-light md:hover:bg-[#CFDACF] md:hover:text-neutral-dark',
};

const classes = `${baseClasses} ${variantClasses[variant] || variantClasses.primary} ${className}`;
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <button type={type} class={classes}>
    <slot />
  </button>
)}

